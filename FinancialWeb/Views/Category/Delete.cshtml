@model FinancialWeb.ViewModels.Category.CategoryViewModel
@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Xác nhận xóa danh mục</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Bạn có chắc chắn muốn xóa danh mục này? Hành động này không thể hoàn tác.
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Tên danh mục:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Loại:</dt>
                    <dd class="col-sm-8">
                        @(Model.Type == "income" ? "Thu nhập" : "Chi tiêu")
                    </dd>

                    <dt class="col-sm-4">Icon:</dt>
                    <dd class="col-sm-8">
                        <i class="fas @Model.IconPath"></i>
                    </dd>

                    <dt class="col-sm-4">Người tạo:</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>
                </dl>

                <form asp-action="Delete" method="post" class="text-center mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash me-1"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>