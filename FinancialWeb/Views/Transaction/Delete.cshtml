@using FinancialWeb.ViewModels.Transaction
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model TransactionViewModel
@{
    ViewData["Title"] = "Xóa giao dịch";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5>Xác nhận xóa giao dịch</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa giao dịch này?
                    </div>

                    <dl class="row mt-3">
                        <dt class="col-sm-3">Số tiền:</dt>
                        <dd class="col-sm-9 @(Model.CategoryType == "income" ? "text-success" : "text-danger") fw-bold">
                            @Model.Amount.ToString("N0") VND
                        </dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Ngày:</dt>
                        <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Danh mục:</dt>
                        <dd class="col-sm-9">@Model.CategoryName</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
